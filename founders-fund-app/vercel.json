{
  "version": 2,
  "crons": [
    {
      "path": "/api/jobs/update-prices",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "app/api/ocr/route.ts": {
      "maxDuration": 30
    },
    "app/api/ultra-ocr/route.ts": {
      "maxDuration": 30
    },
    "app/api/debug-ocr/route.ts": {
      "maxDuration": 30
    },
    "app/api/simple-ocr/route.ts": {
      "maxDuration": 30
    },
    "app/api/pnl-extract/route.ts": {
      "maxDuration": 30
    },
    "app/api/ai/predict/route.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true"
    }
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}
